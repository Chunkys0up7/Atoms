{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gndp.example.com/schemas/module-schema.json",
  "title": "GNDP Module Schema",
  "description": "Schema for validating GNDP module YAML files",
  "type": "object",
  "required": ["module_id", "name", "description", "atom_ids", "metadata", "tags"],
  "properties": {
    "module_id": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "minLength": 3,
      "maxLength": 50,
      "description": "Unique module identifier (kebab-case)"
    },
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100,
      "description": "Human-readable module name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Module description"
    },
    "atom_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]+-[0-9]{3}$"
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "List of atom IDs included in this module"
    },
    "metadata": {
      "type": "object",
      "required": ["owner", "criticality", "status", "created", "updated"],
      "properties": {
        "owner": {
          "type": "string",
          "minLength": 2,
          "description": "Team or individual owner"
        },
        "criticality": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Business criticality level"
        },
        "status": {
          "type": "string",
          "enum": ["planning", "in-progress", "approved", "deprecated"],
          "description": "Module status"
        },
        "created": {
          "type": "string",
          "format": "date",
          "description": "Creation date (YYYY-MM-DD)"
        },
        "updated": {
          "type": "string",
          "format": "date",
          "description": "Last update date (YYYY-MM-DD)"
        },
        "estimated_effort": {
          "type": "string",
          "description": "Estimated implementation effort"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*$"
          },
          "description": "List of other module IDs this module depends on"
        }
      },
      "additionalProperties": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "minItems": 1,
      "description": "Searchable tags"
    }
  },
  "additionalProperties": false
}
